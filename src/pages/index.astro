---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// Check if user is authenticated
const { cookies, redirect } = Astro;

const accessToken = cookies.get('sb-access-token');
const refreshToken = cookies.get('sb-refresh-token');

let user = null;

if (accessToken && refreshToken) {
  const { data } = await supabase.auth.setSession({
    access_token: accessToken.value,
    refresh_token: refreshToken.value
  });
  
  user = data.user;
} else {
  return redirect('/auth');
}

// Get user profile
const { data: profile } = await supabase
  .from('profiles')
  .select('*')
  .eq('id', user.id)
  .single();
---

<Layout title="Pushups App">
  <header>
    <div class="container">
      <h1>Pushups Challenge</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/challenges">Challenges</a></li>
          <li><a href="/profile">Profile</a></li>
          <li>
            <button id="logout">Logout</button>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <div class="container">
      <h2>Welcome, {profile?.username || 'User'}!</h2>
      <p>Get started with your fitness challenges here.</p>
      
      <div class="dashboard">
        <div class="dashboard-card">
          <h3>Your Active Challenges</h3>
          <p>You don't have any active challenges yet.</p>
          <a href="/challenges" class="btn">Find Challenges</a>
        </div>
        
        <div class="dashboard-card">
          <h3>Your Progress</h3>
          <p>Start a challenge to track your progress.</p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { supabase } from '../lib/supabase';
  
  document.getElementById('logout')?.addEventListener('click', async () => {
    await supabase.auth.signOut();
    window.location.href = '/auth';
  });
</script>

